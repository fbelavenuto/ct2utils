    "version": "0.2.0",
    "configurations": [    
        {
            "name": "(gdb) ct2utils",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ct2utils.exe",
            "args": [
                "tests\\NewFile.ct2",
                "-i",
                "-f",
                "tests\\PITFALLII#0607B0",
                "-t",
                "TESTE"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\winbuilds\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) wav2ct2",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/wav2ct2.exe",
            "args": [
                "-l"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\winbuilds\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}